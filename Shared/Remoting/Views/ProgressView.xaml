<controls:WindowEx x:Class="Shared.Remoting.ProgressView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shared.Remoting"
        xmlns:controls="clr-namespace:Shared.Controls"
        mc:Ignorable="d"
        Style="{StaticResource DialogEx}"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Title="ProgressView"  Width="400">
    <Grid>
        <StackPanel Margin="15">
            <TextBlock x:Name="AppName" Text="Window" Margin="0,0,0,3"/>
            <ProgressBar x:Name="InstallProgress" Maximum="100"/>
        </StackPanel>
    </Grid>
</controls:WindowEx>
