<Window x:Class="TestService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestService"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid Columns="2">
        <Button Content="Start" x:Name="StartButton" Click="StartButton_OnClick"/>
        <Button Content="Stop" x:Name="StopButton" Click="StopButton_OnClick"/>

    </UniformGrid>
</Window>
